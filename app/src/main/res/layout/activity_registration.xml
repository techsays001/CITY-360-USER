<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >
    <ScrollView


        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"


                android:layout_height="1056dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/r_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Create account"
                    android:textColor="#0DE5FF"
                    android:textSize="20sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/eimg"
                    android:layout_width="140dp"
                    android:layout_height="152dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/cr"
                    android:src="@drawable/pic"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.572" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#9E000000"
                    android:fontFamily="@font/roboto_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter your full name" />

                <EditText
                    android:id="@+id/ename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#20F3D4"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:textColorHint="#9E000000"
                    android:textSize="14sp" />



                <TextView
                    android:fontFamily="@font/roboto_light"

                    android:textColor="#9E000000"
                    android:id="@+id/textView5"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Email address" />

                <EditText
                    android:id="@+id/eemailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#20F3D4"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Email id"
                    android:inputType="textMultiLine"
                    android:textColorHint="#BE000000"
                    android:textSize="14sp" />
                <TextView
                    android:fontFamily="@font/roboto_light"

                    android:textColor="#9E000000"
                    android:id="@+id/textView6"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter your address" />

                <EditText

                    android:id="@+id/eaddress"
                    android:layout_width="349dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#20F3D4"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Address"
                    android:inputType="textMultiLine"
                    android:textColorHint="#BE000000"
                    android:textSize="14sp" />


                <TextView
                    android:fontFamily="@font/roboto_light"

                    android:textColor="#9E000000"
                    android:id="@+id/enterpass"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter a password" />

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#20F3D4"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Enter password"
                    android:inputType="textPassword"
                    android:textColorHint="#B7000000"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="CheckBox" />

                <TextView
                    android:fontFamily="@font/roboto_light"

                    android:textColor="#9E000000"
                    android:id="@+id/textView8"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repeat Password" />

                <EditText
                    android:id="@+id/cpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#20F3D4"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Repeat your password"
                    android:inputType="textPassword"
                    android:textColorHint="#B7000000"
                    android:textSize="14sp" />


                <CheckBox
                    android:id="@+id/ccpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="CheckBox" />

                <Button
                    android:id="@+id/ebt"
                    android:layout_width="232dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/btn"
                    android:fontFamily="@font/roboto"
                    android:text="Register now"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>