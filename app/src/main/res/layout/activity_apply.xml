<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >
    <ScrollView


        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"


                android:layout_height="1056dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/eimg"
                    android:layout_width="140dp"
                    android:layout_height="152dp"
                    android:layout_marginLeft="135dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.572" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#9E000000"
                    android:fontFamily="@font/roboto_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date" />

                <EditText
                    android:id="@+id/adate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:focusable="false"
                    android:backgroundTint="#20F3D4"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Date"
                    android:inputType="textPersonName"
                    android:textColorHint="#9E000000"
                    android:textSize="14sp" />



                <TextView
                    android:fontFamily="@font/roboto_light"

                    android:textColor="#9E000000"
                    android:id="@+id/textView5"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time" />

                <EditText
                    android:id="@+id/atime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#20F3D4"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Time"
                    android:focusable="false"
                    android:inputType="textMultiLine"
                    android:textColorHint="#BE000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/enterpass"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Enter Work Details"
                    android:textColor="#9E000000" />

                <EditText
                    android:id="@+id/adetails"
                    android:layout_width="353dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#20F3D4"
                    android:ems="10"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Details"
                    android:inputType="textMultiLine"
                    android:textColorHint="#B7000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView6"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Working Area your address"
                    android:textColor="#9E000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <EditText

                        android:id="@+id/aaddress"
                        android:layout_width="292dp"
                        android:layout_height="99dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:backgroundTint="#20F3D4"
                        android:ems="10"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Doubel to to find current location"
                        android:inputType="textMultiLine"
                        android:textColorHint="#BE000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/map"
                        android:layout_width="32dp"
                        android:layout_height="48dp"
                        android:background="@drawable/pl"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="#9E000000" />
                </LinearLayout>


                <Button
                    android:id="@+id/abt"
                    android:layout_width="232dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/btn"
                    android:fontFamily="@font/roboto"
                    android:text="Register now"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>